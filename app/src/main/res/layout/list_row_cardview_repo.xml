<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/follow"
    android:layout_alignParentStart="true"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RepositoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RepositoryName"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:padding="10dp" />

        <TextView
            android:id="@+id/RepositoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RepositoryDescription"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:padding="10dp"
            android:drawableTop="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/RepositoryLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/RepositoryCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:padding="10dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>